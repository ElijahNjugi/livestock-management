<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Manage Animals"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="16dp"
        android:background="#4CAF50"
        android:textColor="@android:color/white"/>

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_arrow_back"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Back" />

    <!-- Horizontal scroll for animal type buttons -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:paddingTop="16dp"
        android:paddingBottom="16dp">

        <LinearLayout
            android:id="@+id/layoutAnimalTypes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:spacing="8dp">

            <!-- Rounded green buttons -->
            <Button
                android:id="@+id/btnCow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cow"
                android:layout_marginEnd="8dp"
                android:background="@drawable/rounded_green_button"
                android:textColor="@android:color/white"/>

            <Button
                android:id="@+id/btnGoat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Goat"
                android:layout_marginEnd="8dp"
                android:background="@drawable/rounded_green_button"
                android:textColor="@android:color/white"/>

            <Button
                android:id="@+id/btnSheep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sheep"
                android:layout_marginEnd="8dp"
                android:background="@drawable/rounded_green_button"
                android:textColor="@android:color/white"/>

            <Button
                android:id="@+id/btnPig"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pig"
                android:layout_marginEnd="8dp"
                android:background="@drawable/rounded_green_button"
                android:textColor="@android:color/white"/>

            <Button
                android:id="@+id/btnPoultry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Poultry"
                android:layout_marginEnd="8dp"
                android:background="@drawable/rounded_green_button"
                android:textColor="@android:color/white"/>

        </LinearLayout>
    </HorizontalScrollView>

    <!-- Add Animal Button -->
    <ImageButton
        android:id="@+id/btnAddAnimal"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@android:drawable/ic_input_add"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Add Animal" />

    <!-- RecyclerView for animals -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerAnimals"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="8dp"/>

</LinearLayout>
