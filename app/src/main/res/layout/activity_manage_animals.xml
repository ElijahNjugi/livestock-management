<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:id="@+id/tvManageAnimalsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manage Animals"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"/>

    <!-- Animal Type Buttons (Vertical) -->
    <LinearLayout
        android:id="@+id/layoutAnimalTypes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/btnCow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cow"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnGoat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Goat"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnSheep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sheep"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnPig"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pig"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnPoultry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Poultry"/>
    </LinearLayout>

    <!-- RecyclerView to list animals -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerAnimals"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingBottom="8dp"/>

    <!-- Add Animal Button -->
    <ImageButton
        android:id="@+id/btnAddAnimal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_input_add"
        android:contentDescription="Add Animal"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_gravity="end"
        android:layout_marginTop="8dp"/>

</LinearLayout>
