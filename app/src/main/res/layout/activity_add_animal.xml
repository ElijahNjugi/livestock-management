<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Animal"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:text="Animal ID*"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/etAnimalId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Animal ID"/>

        <TextView
            android:text="Type*"
            android:textStyle="bold"
            android:layout_marginTop="8dp"/>
        <Spinner
            android:id="@+id/spAnimalType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Weight*"
            android:textStyle="bold"
            android:layout_marginTop="8dp"/>
        <EditText
            android:id="@+id/etWeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Weight"/>

        <TextView
            android:text="Last Checkup Date"
            android:textStyle="bold"
            android:layout_marginTop="8dp"/>
        <EditText
            android:id="@+id/etLastCheckup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="yyyy-MM-dd (optional)"/>

        <Button
            android:id="@+id/btnAddAnimal"
            android:text="Add Animal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"/>
    </LinearLayout>
</ScrollView>
